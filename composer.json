{
    "name": "hiqdev/hiam-core",
    "type": "yii2-extension",
    "description": "Identity and Access Management server providing OAuth2, multi-factor authentication and more",
    "keywords": [
        "iam",
        "oauth2",
        "rbac",
        "multi-factor",
        "two-factor",
        "authentication",
        "authorization",
        "audit",
        "yii2"
    ],
    "homepage": "https://github.com/hiqdev/hiam-core",
    "license": "BSD-3-Clause",
    "support": {
        "email": "support@hiqdev.com",
        "source": "https://github.com/hiqdev/hiam-core",
        "issues": "https://github.com/hiqdev/hiam-core/issues",
        "wiki": "https://github.com/hiqdev/hiam-core/wiki",
        "forum": "https://forum.hiqdev.com/hiam"
    },
    "authors": [
        {
            "name": "Andrii Vasyliev",
            "role": "Project lead",
            "email": "sol@hiqdev.com",
            "homepage": "http://hipanel.com/"
        },
        {
            "name": "Dmitry Naumenko",
            "role": "Lead backend developer",
            "email": "silverfire@hiqdev.com",
            "homepage": "http://silverfire.me/"
        },
        {
            "name": "Andrey Klochok",
            "role": "Lead frontend developer",
            "email": "tafid@hiqdev.com",
            "homepage": "http://hiqdev.com/"
        },
        {
            "name": "Yuriy Myronchuk",
            "role": "QA Lead",
            "email": "bladeroot@hiqdev.com",
            "homepage": "http://hiqdev.com/"
        }
    ],
    "require": {
        "php": ">5.5",
        "yiisoft/yii2": "~2.0.0",
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "filsh/yii2-oauth2-server": "2.0.1.x-dev@dev",
        "hiqdev/php-confirmator": "<2.0 || dev-master",
        "hiqdev/yii2-mfa": "<2.0 || dev-master",
        "hiqdev/yii2-pnotify": "<2.0 || dev-master",
        "hiqdev/yii2-language": "<2.0 || dev-master",
        "hiqdev/yii2-hiam-authclient": "<2.0 || dev-master",
        "hiqdev/yii2-theme-adminlte": "<2.0 || dev-master",
        "hiqdev/yii2-asset-icheck": "^1.0",
        "hiqdev/hisite-core": "<2.0 || dev-master"
    },
    "require-dev": {
        "hiqdev/hidev-php": "<2.0",
        "hiqdev/hidev-hiqdev": "<2.0"
    },
    "autoload": {
        "psr-4": {
            "hiam\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "hiam\\tests\\": "tests"
        }
    },
    "extra": {
        "config-plugin": {
            "params": "src/config/params.php",
            "hisite": "src/config/hisite.php"
        }
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
