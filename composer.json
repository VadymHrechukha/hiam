            "homepage": "http://hiqdev.com/"
        },
        {
            "name": "Yuriy Myronchuk",
            "role": "QA Lead",
            "email": "bladeroot@hiqdev.com",
            "homepage": "http://hiqdev.com/"
        }
    ],
    "require": {
        "php": "^5.6",
        "yiisoft/yii2": "^2.0",
        "yiisoft/yii2-bootstrap": "^2.0",
        "yiisoft/yii2-swiftmailer": "^2.0",
        "filsh/yii2-oauth2-server": "*",
        "hiqdev/yii2-hiam-authclient": "*",
        "hiqdev/yii2-theme-adminlte": "*",
        "hiqdev/yii2-asset-icheck": "*",
        "hiqdev/composer-config-plugin": "<2.0"
    },
    "require-dev": {
        "hiqdev/hidev-php": "<2.0",
        "hiqdev/hidev-vendor": "<2.0"
    },
    "autoload": {
        "psr-4": {
            "hiam\\": "src"
        }
    },
    "extra": {
        "config-plugin": {
            "params": "src/config/params.php",
            "hisite": "src/config/hisite.php",
            "hidev": "src/config/hidev.php"
        }
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
