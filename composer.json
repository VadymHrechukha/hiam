{
    "name": "hiqdev/hiam-core",
    "type": "yii2-extension",
    "description": "Identity and Access Management server providing OAuth2, RBAC and logging",
    "keywords": [
        "iam",
        "oauth2",
        "rbac",
        "authentication",
        "authorization",
        "audit",
        "yii2"
    ],
    "homepage": "https://github.com/hiqdev/hiam-core",
    "license": "BSD-3-Clause",
    "support": {
        "email": "support@hiqdev.com",
        "source": "https://github.com/hiqdev/hiam-core",
        "issues": "https://github.com/hiqdev/hiam-core/issues",
        "wiki": "https://github.com/hiqdev/hiam-core/wiki",
        "forum": "https://forum.hiqdev.com/hiam"
    },
    "authors": [
        {
            "name": "Andrii Vasyliev",
            "role": "Project lead",
            "email": "sol@hiqdev.com",
            "homepage": "http://hipanel.com/"
        },
        {
            "name": "Dmitry Naumenko",
            "role": "Lead backend developer",
            "email": "silverfire@hiqdev.com",
            "homepage": "http://silverfire.me/"
        },
        {
            "name": "Andrey Klochok",
            "role": "Lead frontend developer",
