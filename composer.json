{
    "name": "hiqdev/hiam",
    "type": "yii2-extension",
    "description": "Identity and Access Management server providing OAuth2, multi-factor authentication and more",
    "keywords": [
        "iam",
        "oauth2",
        "rbac",
        "multi-factor",
        "two-factor",
        "authentication",
        "authorization",
        "audit",
        "yii2"
    ],
    "homepage": "https://github.com/hiqdev/hiam",
    "license": "BSD-3-Clause",
    "support": {
        "email": "support@hiqdev.com",
        "source": "https://github.com/hiqdev/hiam",
        "issues": "https://github.com/hiqdev/hiam/issues",
        "wiki": "https://github.com/hiqdev/hiam/wiki",
        "forum": "https://forum.hiqdev.com/hiam"
    },
    "authors": [
        {
            "name": "Andrii Vasyliev",
            "role": "Project lead",
            "email": "sol@hiqdev.com",
            "homepage": "http://hipanel.com/"
        },
        {
            "name": "Dmitry Naumenko",
            "role": "Lead backend developer",
            "email": "d.naumenko.a@gmail.com",
            "homepage": "http://silverfire.me/"
        },
        {
            "name": "Andrey Klochok",
            "role": "Lead frontend developer",
            "email": "andreyklochok@gmail.com",
            "homepage": "http://hiqdev.com/"
        },
        {
            "name": "Yuriy Myronchuk",
            "role": "QA Lead",
            "email": "bladeroot@gmail.com",
            "homepage": "http://hiqdev.com/"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "yiisoft/yii2": "~2.0.0",
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "filsh/yii2-oauth2-server": "2.0.1.x-dev@dev",
        "bshaffer/oauth2-server-php": "1.10",
        "hiqdev/php-confirmator": "dev-master",
        "hiqdev/yii2-mfa": "dev-master",
        "hiqdev/yii2-pnotify": "dev-master",
        "hiqdev/yii2-language": "dev-master",
        "hiqdev/yii2-hiam-authclient": "dev-master",
        "hiqdev/yii2-monitoring": "dev-master",
        "hiqdev/yii-compat": "dev-master",
        "hiqdev/hipanel-rbac": "dev-master",
        "hiqdev/hisite": "dev-master",
        "sentry/sdk": "^3.1",
        "vintage/yii2-invisible-recaptcha": "dev-master"
    },
    "require-dev": {
        "hiqdev/hidev": "dev-master",
        "hiqdev/hidev-php": "dev-master",
        "hiqdev/hidev-hiqdev": "dev-master",
        "codeception/codeception": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "hiam\\": "src",
            "hiam\\tests\\": "tests"
        }
    },
    "extra": {
        "config-plugin": {
            "params": "config/params.php",
            "common": "config/common.php",
            "test": "config/test.php",
            "web": "config/web.php",
            "acceptance": "config/acceptance.php",
            "codeception": "config/codeception.php",
            "web-test": [
                "$web",
                "$test"
            ]
        }
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
