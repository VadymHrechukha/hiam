{
    "name": "hiqdev/hi3a",
    "type": "project",
    "description": "AAA server providing OAuth2, ABAC and logging",
    "keywords": ["hi3a","aaa","oauth2","abac","authentication","authorization","audit","hipanel","yii2"],
    "homepage": "http://hiqdev.com/hi3a",
    "support": {
        "email":  "support@hiqdev.com",
        "source": "https://github.com/hiqdev/hi3a",
        "issues": "https://github.com/hiqdev/hi3a/issues",
        "wiki":   "https://github.com/hiqdev/hi3a/wiki",
        "forum":  "https://forum.hiqdev.com/hi3a"
    },
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name":     "Andrii Vasyliev",
            "email":    "sol@hiqdev.com",
            "homepage": "https://hipanel.com/"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "*",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "filsh/yii2-oauth2-server": "*@dev",
        "cebe/yii2-gravatar": "*",
        "bower-asset/admin-lte": "2.*"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/hiqdev/yii2-oauth2-server"
        }
    ],
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
