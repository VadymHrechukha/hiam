version: '3'

services:
  nginx:
    image: nginx:latest
    ports:
      - "80"
    links:
      - php-fpm
    networks:
      - local-network
      - proxy-network
    volumes:
      - ./:/app
      - ./.docker/nginx/etc/nginx/conf.d:/etc/nginx/conf.d
      - ./.docker/nginx/var/log/nginx:/var/log/nginx
    environment:
      - "VIRTUAL_HOST=${HOSTS}"
      - "LETSENCRYPT_HOST=${HOSTS}"
      - "LETSENCRYPT_EMAIL=devteam@hiqdev.com"

  php-fpm:
    image: hiqdev/php:7.4-fpm
    volumes:
      - ./:/app
      - ./.docker/php/var/log/php:/var/log/php
      - var-volume:/HIAPI_VAR
    networks:
      - local-network
      - pgsql-network
    environment:
      - "ENV=${ENV}"
      - "PHP_IDE_CONFIG=serverName=${HOSTS}"

networks:
  local-network:
    driver: bridge
  pgsql-network:
    external:
      name: "pgsql-${HIAPI_SITE}"
  proxy-network:
    external:
      name: "nginx-proxy-network-${REAL_IP}"

volumes:
  var-volume:
    external:
      name: "var-${HIAPI_SITE}"
